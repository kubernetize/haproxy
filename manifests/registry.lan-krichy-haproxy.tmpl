image: registry.lan/krichy/haproxy:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
manifests:
- image: registry.lan/krichy/haproxy:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}arm64
  platform:
    os: linux
    architecture: arm64
    variant: v8
- image: registry.lan/krichy/haproxy:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}arm
  platform:
    os: linux
    architecture: arm
    variant: v7

{{#if build.tags}}
tags:
{{#each build.tags}}
- {{this}}
{{/each}}
{{/if}}

